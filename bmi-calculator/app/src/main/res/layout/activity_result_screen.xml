<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultScreen">

    <TextView
        android:id="@+id/weightResultTextBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="21dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/heightResultTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weightResultText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heightResultText"
        android:layout_width="72dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="128dp"
        android:text="Altura: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/BMIResult"
        app:layout_constraintEnd_toStartOf="@+id/heightResultTextBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightResultText" />

    <TextView
        android:id="@+id/BMIResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="30dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/BMIResultDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BMIText"
        app:layout_constraintTop_toBottomOf="@+id/heightResultText" />

    <TextView
        android:id="@+id/heightResultTextBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="530dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heightResultText"
        app:layout_constraintTop_toBottomOf="@+id/weightResultTextBox" />

    <TextView
        android:id="@+id/BMIResultDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="298dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMIResult" />

    <TextView
        android:id="@+id/weightResultText"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="21dp"
        android:text="Peso: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/heightResultText"
        app:layout_constraintEnd_toStartOf="@+id/weightResultTextBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BMIText"
        android:layout_width="54dp"
        android:layout_height="37dp"
        android:layout_marginStart="129dp"
        android:text="IMC"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/BMIResult"
        app:layout_constraintEnd_toStartOf="@+id/BMIResult"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>